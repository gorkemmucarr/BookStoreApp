@model BookDtoForCreate

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-area="Admin" asp-controller="Book" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />

                <label asp-for="Writer" class="control-label my-2"></label>
                <input asp-for="Writer" class="form-control" />

                <label asp-for="Price" class="control-label my-2"></label>
                <input asp-for="Price" class="form-control" />

                <label asp-for="ImageUrl" class="control-label my-2"></label>
                <input type="file" name="file" class="form-control"/>

                <label asp-for="CategoryId"></label>
                <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                </select>

            </div>
            <button type="submit" class="btn btn-success my-2">Create</button>
        </form>

    </div>
</div>