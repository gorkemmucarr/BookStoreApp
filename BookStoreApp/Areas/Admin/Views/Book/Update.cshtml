@model Book

@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-area="Admin" asp-controller="Book" asp-action="Update" enctype="multipart/form-data">
            <input type="hidden" asp-for="BookId" />
            <div class="form-group">
                <label asp-for="BookName" class="control-label"></label>
                <input asp-for="BookName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <input asp-for="CategoryId" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Writer" class="control-label"></label>
                <input asp-for="Writer" class="form-control" />
            </div>

            <div class="form-group my-3">
                <img src="@Model?.ImageUrl" width="150" class="rounded shadow" />
            </div>

            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input type="file" name="file" class="form-control"/>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>

            <div class="form-group">
                <button type="submit" value="Save" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>


