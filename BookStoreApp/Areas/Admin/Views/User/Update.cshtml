@model UserDtoForUpdate

<div class="text-center">
    <div class="display-6">Edit An User(@Model.Username)</div>
</div>

<form method="post" asp-area="Admin" asp-controller="User" asp-action="Update">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            
            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary" />
                    <a asp-area="Admin" asp-controller="User" asp-action="Index"class="btn btn-primary">Back To Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                @foreach (var roles in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input type="checkbox" 
                            name="Roles" 
                            value="@roles" 
                            checked="@(Model.UserRoles.Contains(roles))"
                            class="form-check-input" />
                        <label class="form-check-label">@roles</label>
                    </div>
                }
            </div>
        </div>
    </div>
</form>