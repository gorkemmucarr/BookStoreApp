@model UserDtoForCreation

<div class="text-center">
    <div class="display-6">
        <i class="fa-regular fa-user"></i>
        Create An User</div>
</div>

<form method="post" asp-area="Admin" asp-controller="User" asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <input type="submit" class="btn btn-primary"  />
                    <a asp-area="Admin" asp-controller="User" asp-action="Index"
                    class="btn btn-primary">
                        <i class="fa-solid fa-arrow-left"></i>
                    Back To Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="lead p-2 mt-2">
                @foreach (var roles in Model.Roles)
                {
                    <div class="form-check my-2">
                        <input type="checkbox" name="Roles" value="@roles" class="form-check-input" />
                        <label class="form-check-label">@roles</label>
                    </div>
                }
            </div>
        </div>
    </div>
</form>
