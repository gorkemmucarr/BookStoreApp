@model Book

<div class="col-sm-12 col-md-4 my-3">
    <div class="card" style="width: 18rem;">
        <p class="display-6 text-center">@Model.BookName</p>
        <img src="@Model?.ImageUrl" class="card-img-top" alt="jpg2.jpg">
        <div class="card-body">
            <div class="card-text">
                <div class="text-danger text-center lead p-2 rounded">@Model?.Price.ToString("c2")</div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="btn btn-group">
                    <a class="btn btn-primary" asp-controller="Book" asp-action="Details" asp-route-id="@Model?.BookId">
                        <i class="fa-solid fa-arrow-right"></i>
                        Details
                    </a>

                    <form method="post" asp-page="/cart" id="@Model.BookId">
                        <input type="hidden" asp-for="BookId" />
                        <input type="hidden" name="ReturnUrl" value="/Book/Details/@Model.BookId" />
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fa-solid fa-cart-shopping"></i>
                           </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
